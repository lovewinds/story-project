<?xml version="1.0"?>
<SceneRoot name="Sample Scene">
	<GlobalResources type="global"></GlobalResources>
	<Scene name="main" class="RPG">
		<Resources>
			<Images>
				<Image src="japanvillage.jpg" name="Background"
					 type="background" width="636" height="475"/>
				<Image src="moderngirl02.png" name="Character"
					 type="sprite" width="128" height="192"/>
			</Images>
			<Sprites>
				<Sprite source="Character" name="loading_circle" width="32" height="48">
					<Index linear="start">1</Index>
					<Index>2</Index>
					<Index>3</Index>
					<Index>4</Index>
					<Index>5</Index>
					<Index>6</Index>
					<Index>7</Index>
					<Index>8</Index>
					<Index>9</Index>
					<Index>10</Index>
					<Index>11</Index>
					<Index linear="end">12</Index>
				</Sprite>
			</Sprites>
		</Resources>
		<Layer name="base">
			<Image name="bg" source="Background" x="0" y="0" width="1024" height="768"/>
			<Sprite name="c1" source="loading_circle" x="0" y="256" />
			<Sprite name="c2" source="loading_circle" x="32" y="256" />
		</Layer>
	</Scene>
	<Scene name="vnovel" class="VNovel">
		<Resources>
			<Images>
				<Image src="f071.png" name="Standing"
					 type="background" width="600" height="800"/>
			</Images>
		</Resources>
		<Layer name="talk">
			<Image name="char" source="Standing" x="200" y="100" width="50%" height="50%"/>
		</Layer>
	</Scene>
</SceneRoot>
